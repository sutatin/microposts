<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <span><%= path_follower(current_user.id) %></span>
        <span><%= path_followed(current_user.id) %></span>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3>Followed (<%= @user.following_users.count %>)</h3>
      <ol class="follow_users">
        <%# TODO: カリキュラム8.5　ループ処理は↓ここでしている %>
        <%# この書き方→だとmodelが無いからエラーとなる。 <%= render @followers %>
        <%= render partial: 'followeds/followed', collection: @followeds %>
      </ol>
    <% end %>
  </div>
</div>